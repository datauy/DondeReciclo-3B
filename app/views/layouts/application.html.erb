<!DOCTYPE html>
<html>
  <head>
    <title>DondeRecicloBack</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="navbar-menu">
    <% if user_signed_in? %>
      Logueado como <strong><%= current_user.email %></strong>.
      <%= link_to 'Editar usuario', edit_user_registration_path, :class => 'navbar-link' %> |
      <%= link_to "Salir", destroy_user_session_path, method: :delete, :class => 'navbar-link'  %>
    <% else %>
      <%= link_to "Acceder", new_user_registration_path, :class => 'navbar-link'  %>
    <% end %>
    </div>
    <%= yield %>
  </body>
</html>
